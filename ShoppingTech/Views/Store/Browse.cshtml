@model IEnumerable<ShoppingTech.DAL.Product>

@{
    ViewBag.Title = "Browse";
}

<h2>Products in @ViewBag.CategoryName category</h2>

@foreach (var product in Model)
{
    <div class="col-lg-3 col-md-3 col-xs-3 col-sm-6">
        <div class="panel panel-success">
            <div class="panel-body">
                <a href='@Url.Action("Details", "Store", new { id = product.ProductId })'>
                    <img class="item-img" src="@product.ImageUrl" alt="@product.Name" />
                </a>
            </div>
            <div class="panel-footer">@Html.ActionLink(product.Name, "Details", new { id = product.ProductId })</div>
        </div>
    </div>
}